---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { formatDate } from '../../utils/date';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post: any) => ({ params: { slug: post.slug } }));
}

const { slug } = Astro.params;
const post = (await getCollection('blog')).find(post => post.slug === slug);

if (!post) {
  return Astro.redirect('/404');
}

const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <article class="prose prose-lg prose-invert mx-auto text-white">
    <h1>{post.data.title}</h1>
    <p class="text-white">{formatDate(post.data.date)}</p>
    <Content />
  </article>
</Layout>
