---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { formatDate } from '../../utils/date';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post: any) => ({ params: { slug: post.slug } }));
}

const { slug } = Astro.params;
const post = (await getCollection('blog')).find(post => post.slug === slug);

if (!post) {
  return Astro.redirect('/404');
}

const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <article class="prose prose-lg mx-auto">
    <h1>{post.data.title}</h1>
    <p class="text-gray-500">{formatDate(post.data.date)}</p>
    <Content />
  </article>
</Layout>

<script>
  // Update image paths to use the assets directory
  document.querySelectorAll('img').forEach(img => {
    const src = img.getAttribute('src');
    if (src && !src.startsWith('http')) {
      img.setAttribute('src', `../../assets/${src}`);
    }
  });
</script> 