---
import { getEntryBySlug, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post: any) => ({ params: { slug: post.slug } }));
}

const { slug } = Astro.params;
const post = await getEntryBySlug('blog', slug);
if (!post) throw new Error('Post not found');
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <article class="max-w-3xl mx-auto bg-white text-gray-900 rounded-lg shadow-sm p-8">
    <h1 class="text-3xl font-bold mb-4">{post.data.title}</h1>
    <p class="text-gray-600 mb-8">{post.data.date}</p>
    <div class="prose max-w-none">
      <Content />
    </div>
  </article>
</Layout> 