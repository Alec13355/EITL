---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact | Alec Harrison">
  <div class="max-w-2xl mx-auto bg-tealbg text-sand rounded-lg shadow-sm p-8">
    <!-- Hero Section -->
    <section class="mb-8 text-center">
      <h1 class="text-4xl font-bold mb-2 text-sand">Contact Alec Harrison</h1>
      <p class="text-lg text-sand/90 mb-4">Let's connect! Whether you want to collaborate, book a talk, or just say hello, I'd love to hear from you.</p>
    </section>

    <!-- Contact Form -->
    <form class="bg-white rounded-lg p-6 shadow text-gray-900 space-y-6" name="contact" method="POST" data-netlify="true">
      <input type="hidden" name="form-name" value="contact" />
      <div>
        <label for="name" class="block text-sm font-medium text-accent mb-1">Name</label>
        <input type="text" id="name" name="name" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-accent focus:border-accent" />
      </div>
      <div>
        <label for="email" class="block text-sm font-medium text-accent mb-1">Email</label>
        <input type="email" id="email" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-accent focus:border-accent" />
      </div>
      <div>
        <label for="message" class="block text-sm font-medium text-accent mb-1">Message</label>
        <textarea id="message" name="message" rows="5" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-accent focus:border-accent"></textarea>
      </div>
      <button type="submit" class="w-full inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-accent hover:bg-accent/80 transition-colors">Send Message</button>
    </form>

    <!-- Alternative Contact Methods -->
    <section class="mt-8 text-center">
      <h2 class="text-xl font-semibold mb-2 text-sand">Other Ways to Connect</h2>
      <p class="mb-2">Email: <a href="mailto:alec@eitl.ai" class="text-accent hover:underline">alec@eitl.ai</a></p>
      <p>LinkedIn: <a href="https://www.linkedin.com/in/Alec13355" target="_blank" rel="noopener" class="text-accent hover:underline">Alec13355</a></p>
    </section>
  </div>
</Layout> 