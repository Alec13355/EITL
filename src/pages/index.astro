---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { xml2js } from 'xml-js';
import truncate from 'truncate-html';

const RSS_URL = 'https://anchor.fm/s/104ead10c/podcast/rss';

// Fetch latest blog post
const blogPosts = (await getCollection('blog')).sort((a: any, b: any) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
const latestBlog = blogPosts[0];

let latestEpisode = null;
try {
	const res = await fetch(RSS_URL);
	const xml = await res.text();
	const data = xml2js(xml, { compact: true }) as any;
	const item = data.rss.channel.item[0];
	latestEpisode = {
		title: item.title._cdata || item.title._text,
		pubDate: item.pubDate._text,
		description: truncate(item.description._cdata || item.description._text, 60, { byWords: false, ellipsis: '...' }),
		audio: item.enclosure?._attributes?.url,
		link: item.link._text,
	};
} catch (e) {
	latestEpisode = null;
}

const formatDate = (dateStr: string) => {
	const date = new Date(dateStr);
	return date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
};

